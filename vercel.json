{
  "version": 2,
  "builds": [
    { "src": "mkdocs/site/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*)\.html", "dest": "/$1.html" },
    { "src": "/(.*)", "dest": "/$1/index.html" }
  ],
  "static": {
    "rewrites": [
      { "source": "/assets/(.*)", "destination": "/mkdocs/site/assets/$1" },
      { "source": "/js/(.*)", "destination": "/mkdocs/site/js/$1" },
      { "source": "/css/(.*)", "destination": "/mkdocs/site/css/$1" }
    ]
  }
}

